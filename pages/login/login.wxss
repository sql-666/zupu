/* pages/login/login.wxss */
.wrap-form{
  width: 80%;
  margin-left: 10%;
  margin-top: 40%;

}

.input-box{
  padding:5rpx 20rpx;
  letter-spacing: 0.01rem;
  font-size: 30rpx;
  color: #8a8a8a;
}

.input-border{
  border-radius: 30rpx;
  border:0.01rpx solid #ccc;
  padding: 10rpx 15rpx;
  margin-top: 20rpx;
}

.placeholder{
  font-size: 25rpx;
  letter-spacing: 0.01rem;
}

.login-btns{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 20rpx;
}

.login-btns button{
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0;
  font-size: 25rpx;
  border-radius: 40rpx;

}