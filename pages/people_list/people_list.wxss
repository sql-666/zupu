/* pages/people_list/people_list.wxss */

.wrap-search{
  display: flex;
  align-items: center;
  justify-content: center;
  background-color:  #fafafa;
  padding-bottom:30rpx; 
}

.wrap-search image{
  width: 45rpx;
  height: 45rpx;
  margin: 10rpx;
}

.wrap-search input{
  width: 80%;
  padding: 10rpx 20rpx;
  border: 0.1rpx solid #ccc;
  border-radius: 10rpx;
  background-color: white;
}

.user, .name{
  display: flex;
  
}

.name{
  border-bottom: 0.1rpx solid #ccc;
  width: 80%;
  padding: 10rpx 30rpx;
  align-items: center;
  justify-content: center;
  text-align: center
}

.name text{
  flex: 3
}

.users{
  padding: 20rpx;
}

.tip{
  padding: 20rpx;
}

#xh{
  flex:1
}