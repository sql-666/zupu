/* pages/user_card/user_card.wxss */
.head{
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
}

.head image{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.table{
  padding: 10rpx 20rpx;
}

.row-item{
  display: flex;
  margin: 20rpx 0;
}

.row-item text:first-child{
  font-size: 30rpx;
  margin-right: 20rpx;
}
.column-item{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
}

.wrap-textarea{
  width: 92%;
  margin-top: 20rpx;
  padding: 20rpx;
  border: 0.1px solid #ccc
}

.textarea {
  width: 100%;
  overflow-wrap: break-word;
  font-size: 28rpx;

}

.row-img image{
  width: 150rpx;
  height: 150rpx;
  margin-top: 20rpx;
  border: 1px solid #ccc;
  margin-right: 10rpx;
}